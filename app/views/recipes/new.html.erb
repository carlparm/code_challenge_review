<%= form_for @recipe do |f| %>
  <%= f.label :user_id, "Author: " %>
  <%= f.collection_select :user_id, User.all, :id, :name, prompt: true %><br>
  <%= f.label :name, "Name: " %>
  <%= f.text_field :name %><br>
  <%= f.label "Pick Ingredients: " %>
    <% @ingredients.each do |ingredient| %>
        <div>
        <%= check_box_tag(:"ingredients[#{ingredient.id}") %>
        <%= label_tag((:"ingredients[#{ingredient.id}"), "#{ingredient.name}") %>
        </div>
    <% end %>
  <%= f.submit %>
<% end %>




